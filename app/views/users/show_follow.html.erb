<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><strong>Tracks:</strong> <%= @user.tracks.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>

    </section>
  </aside>
  <div class="col-md-8">
    <p class='font-bold text-2xl'><%= @title %></p>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>
<div class="flex items-center justify-center h-20">
  <%= link_to t(".back"), :back, class: "text-lg text-blue-500 hover:text-blue-700 hover:underline hover:bg-blue-100 p-2 rounded transition duration-300 ease-in-out" %>
</div>
